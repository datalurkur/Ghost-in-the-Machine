#version 150

uniform sampler2D texture0;

uniform input_block {
    vec4 color;
};

in vec3 frag_normal;
in vec3 frag_eye;
in vec2 frag_texcoord;

out vec4 frag_color;

void main() {
    vec4 tex_color = texture(texture0, frag_texcoord);
    frag_color = color;

    frag_color *= tex_color;

    // DEBUG
    frag_color = vec4(frag_texcoord[1], frag_texcoord[0], tex_color[0], 1);
}
